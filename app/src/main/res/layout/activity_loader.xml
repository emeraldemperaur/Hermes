<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/hermes_introbckgrnd"
    android:layout_height="match_parent"
    tools:context="iot.empiaurhouse.hermes.Views.LauncherActivity"
    android:id="@+id/launcher_activity"
    android:paddingBottom="44dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">








        <ImageView
            android:layout_marginTop="120dp"
            android:id="@+id/hermes_logo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@drawable/hermes_minimallogo"
            android:visibility="visible"
            android:contentDescription="@string/wblogo_txt"
            />


    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:textAllCaps="false"
        android:id="@+id/title_text"
        android:fontFamily="@font/montserratregular"
        android:text="@string/app_name"
        android:textSize="33sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <iot.empiaurhouse.hermes.Utils.TypeWriterTextView
        android:id="@+id/title_subtext"
        android:fontFamily="@font/montserratmedium"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:text="@string/title_subtext"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="9dp"
        />







</LinearLayout>