<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hermes_loaderbackground"
    tools:context=".CaduceusLoaderActivity">


    <ImageView
        android:layout_marginTop="120dp"
        android:id="@+id/hermes_logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:src="@drawable/hermes_minimallogo"
        android:visibility="visible"
        android:contentDescription="@string/wblogo_txt"
        />


    <TextView
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:textAllCaps="false"
        android:id="@+id/title_text"
        android:fontFamily="@font/montserratregular"
        android:text="@string/app_name"
        android:textSize="33sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <iot.empiaurhouse.hermes.TypeWriterTextView
        android:id="@+id/title_subtext"
        android:fontFamily="@font/montserratregular"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:text="@string/LoadingText"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="9dp"
        />





</LinearLayout>
